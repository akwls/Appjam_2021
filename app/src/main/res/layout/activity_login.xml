<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".LoginActivity">
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일을 입력하세요."
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="14dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_email"
        android:gravity="center" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증하기"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/colorMain"
        android:layout_alignParentBottom="true"
        android:padding="17dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 오류가 발생하셨나요?"
        android:textColor="#000"
        android:textSize="14sp"
        android:id="@+id/txtLoginError"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnLogin"
        android:layout_marginBottom="28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 링크 재발송"
        android:textColor="#000"
        android:textSize="14sp"
        android:id="@+id/txtLoginCode"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtLoginError"
        android:layout_marginBottom="20dp"/>



</RelativeLayout>